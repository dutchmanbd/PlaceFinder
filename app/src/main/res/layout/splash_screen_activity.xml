<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#86aeae"
        tools:context="com.zxdmjr.placefinder.SplashScreen"
        android:weightSum="1">


        <TextView
            android:text="Place Finder"
            android:layout_width="match_parent"
            android:layout_marginTop="30dp"
            android:layout_height="wrap_content"
            android:id="@+id/yonderFinder"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="#016973"
            android:gravity="center"
            android:layout_weight="0.40" />

        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:id="@+id/imageView6"
            android:layout_gravity="center"
            android:src="@mipmap/ic_launcher_3" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:padding="10dp"
        android:textColor="#016973"
        android:layout_marginBottom="10dp"
        android:textSize="17sp"
        android:text="Northern University Bangladesh"/>
</RelativeLayout>
